<%= render 'layouts/flash_message' %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <h1 class="mb-5">会員一覧</h1>

        <table class="table table-hover table-inversetext-center">
          <thead class="table table-secondary">
            <tr>
              <th>ID</th>
              <th>画像</th>
              <th>登録名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= image_tag user.get_profile_image, size: "50x50" %></td>
                <td><%= user.name %>
                </td>
                <td><%= user.email %></td>
                <td>
                  <% if user.is_deleted == false %>
                    <span class="text-success font-weight-bold">
                      <%= '有効会員' %>
                    </span>
                  <% else %>
                    <span class="text-secondary font-weight-bold">
                      <%= '退会済み' %>
                    </span>
                  <% end %>
                </td>
                <td><%= link_to "情報編集", edit_admin_user_path(user.id), class: "btn btn-info" %></td>
                <td><%= link_to "投稿管理", admin_user_path(user.id), class: "btn btn-warning" %></td>
                <td><%= link_to "コメント管理", admin_user_comments_path(user.id), class: "btn btn-warning" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>
  </div>
</div>
