<h1>Comments by <%= @user.name %></h1>

<% @comments.each do |comment| %>
  <div class="card mt-2 shadow-lg">
    <div class="card-body">
      <p class="card-text">コメント：<%= comment.comment %></p>
    <div class="row">
      <div class="col">
        <span><i class="fas fa-user"></i> By <%= comment.user.name %></span>
      </div>
      <div class="col">
      </div>
      <div class="col">
          <%= link_to "Destroy", post_comment_path(comment.post, comment), method: :delete, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
    </div>
  </div>
<% end %>