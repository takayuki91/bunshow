<h1 class="text-center mt-2"><%= @user.name %>のコメント一覧</h1>

<div class='row justify-content-center my-2'>
  <%= link_to(admin_users_path, class:"text-dark") do %>
    <span><i class="fa-solid fa-backward"></i> Back</span>
  <% end %>
</div>

<% @comments.order(created_at: :desc).each do |comment| %>
  <div class="card mx-3 mt-2 shadow-lg">
    <div class="card-body">
      <p class="card-text">コメント：<%= comment.comment %></p>
    <div class="row">
      <div class="col-8">
        <span><i class="fas fa-user"></i> By <%= comment.user.name %></span>
      </div>
      <div class="col-2">
        <i class="fa-regular fa-clock"></i><%= l comment.created_at, format: :short %>
      </div>
      <div class="col-2">
          <%= link_to "削除", admin_user_comment_path(comment.user, comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
    </div>
  </div>
<% end %>

<div class='row justify-content-center mt-2'>
  <%= paginate @comments, theme: 'twitter-bootstrap-4' %>
</div>