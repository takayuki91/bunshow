<%= render 'layouts/flash_message' %>

<h1 class="text-center mt-2">指導者情報編集</h1>

<div class="container">

  <div class="row">
    <div class="login col-lg-4 col-md-4 col-sm-4 mx-sm-auto shadow-lg rounded px-2 py-4 mt-5">

    <p class="h3 mb-3 font-weight-normal text-center">編集</p>

    <%= form_with model: @user do |f| %>

    <hr>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :name, placeholder: "ニックネーム ", required: true, class: "form-control" %>

    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, placeholder: "メールアドレス", required: true, autofocus: true, class: "form-control" %>

    <hr>
    <%= f.submit "変更を保存", class: "btn btn-dark btn-block" %>

    <% end %>

    </div>
  </div>
  <div class="row mt-5 pt-5 justify-content-center">
    <%= link_to "退会する", unsubscribe_users_path, class: "btn btn-sm btn-outline-secondary" %>
  </div>
</div>