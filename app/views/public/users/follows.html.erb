<h1 class="text-center mt-2"><%= @user.name %>がフォロー中</h1>

<div class="btn-wrapper mx-auto my-3">
  <div class="row justify-content-center">
    <%= link_to 'Homeに戻る', posts_path, class: "btn btn-sm btn-outline-secondary mr-2" %>
    <%= link_to 'BunShowログに戻る', user_path(current_user.id), class: 'btn btn-sm btn-outline-secondary' %>
  </div>
</div>

<div class="scroll-list jscroll">
  <% if @user.follows.exists? %>
    <%= render 'relationships', users: @users %>
  <% else %>
    <div class="h4 text-center">
      ユーザーはいません。
      <%= image_tag "empty_leader.jpg", size: "100x165", class: "mt-3 mx-auto d-block" %>
　　</div>
  <% end %>
</div>

<%= render 'layouts/click' %>