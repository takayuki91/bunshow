<% if user.is_followed_by?(current_user) %>
  <%= link_to(user_relationships_path(user.id), method: :delete, remote: true, class:"text-dark") do %>
      <i class="fa-solid fa-handshake"></i><%= "フォロー中" %>
  <% end %>
<% else %>
  <%= link_to(user_relationships_path(user.id), method: :post, remote: true, class:"text-dark") do %>
      <i class="fa-solid fa-handshake-slash"></i><%= "フォローする" %>
  <% end %>
<% end %>