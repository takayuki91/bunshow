<div class="d-flex flex-wrap">
  <% @posts.each do |post| %>
  <div class="col-lg-4 col-md-6 col-sm-12">
    <div class="card mx-auto mt-4 shadow-lg">
      <% if post.post_image.attached? %>
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.post_image, size: "300x300", class: "card-img-top" %>
        <% end %>
      <% end %>
      <div class="card-body">
        <p class="card-text">説明：<%= post.explanation %></p>
      <div class="row">
        <div class="col">
          <%= link_to(user_path(post.user.id), class:"text-dark") do %>
            <span><i class="fas fa-user"></i> By <%= post.user.name %></span>
          <% end %>
        </div>
        <div class="col">
          <%= render "public/likes/like-btn", post: post %>&nbsp;
          <%= render "public/paragons/paragon-btn", post: post %>&nbsp;
          <%= render "public/bookmarks/bookmark-btn", post: post %>
        </div>
        <div class="col">
          <span><i class="fa-regular fa-clock"></i><%= l post.created_at, format: :short %></span>
        </div>
      </div>
      </div>
    </div>
  </div>
  <% end %>
</div>