<div class="d-flex flex-wrap">
  <% @posts.each do |post| %>
  <div class="col-lg-4 col-md-6 col-sm-12">
    <div class="card mx-auto mt-4 shadow-lg">
      <% if post.post_image.attached? %>
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.post_image, size: "300x300", class: "card-img-top" %>
        <% end %>
      <% end %>
      <div class="card-body">
        <p class="card-text">説明：<%= post.explanation %></p>
        <div class="row">
          <div class="col-12 mb-2">
            <%= link_to(user_path(post.user.id), class:"text-dark") do %>
              <span><i class="fas fa-user"></i> By <%= post.user.name %></span>
            <% end %>
          </div>
        </div>

      <div class="row">
        <div id="post_<%= post.id %>" class="col-8">
          <div class="row">
            <div class="col-2">
              <div class="like-btn">
                <%= render partial: "public/likes/like-btn", locals: { post: post } %>
              </div>
            </div>

            <div class="col-2">
              <div class="paragon-btn">
                <%= render "public/paragons/paragon-btn", post: post %>
              </div>
            </div>

            <div class="col-2">
              <div class="bookmark-btn">
                <%= render partial: "public/bookmarks/bookmark-btn", locals: { post: post } %>
              </div>
            </div>
          </div>
        </div>

        <div class="col-4 text-right">
          <span><i class="fa-regular fa-clock"></i><%= l post.created_at, format: :short %></span>
        </div>

      </div>

      </div>
    </div>
  </div>
  <% end %>
</div>