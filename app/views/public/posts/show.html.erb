<h1>Post Show</h1>

<div class="d-flex flex-wrap justify-content-center">
  <div class="col-lg-4 col-md-6 col-sm-12 mx-auto">
    <div class="card mx-auto mt-4 shadow-lg">
      <% if @post.post_image.attached? %>
       <%= image_tag @post.post_image, size: "300x300", class: "card-img-top" %>
      <% end %>
      <div class="card-body">
        <p class="card-text">説明：<%= @post.explanation %></p>
      <div class="row">
        <div class="col">
         <span><i class="fas fa-user"></i> By <%= @post.user.name %> ｜ </span>
        </div>
        <div class="col">
        </div>
        <div class="col">
        </div>
      </div>
      </div>
    </div>
    <%= link_to 'Destroy', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
  </div>
</div>

