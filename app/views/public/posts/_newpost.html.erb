<div class="form-inline">
  <%= form_with model: @post, url: form_url do |f| %>

  <div class="form-group">
    <%= f.label :post_image, "画像" %>
    <%= f.file_field :post_image, accept: "image/*", class: "form-control-file" %>
  </div>
  
  <div class="form-group">
    <%= f.label :explanation, "投稿" %>
    <%= f.text_area :explanation, :placeholder =>"今日の指導は？", required: true, class: "form-control" %>
  </div>
  
  <div>
    <%= f.submit button_label, class: "btn btn-success" %>
  </div>

  <% end %>
</div>